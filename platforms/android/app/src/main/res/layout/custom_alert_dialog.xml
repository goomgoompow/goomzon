<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  >
  <TextView
    android:id="@+id/alert_dialog_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:gravity="center"
    android:text="Hello"
    android:theme="@style/alert_dialog_message"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
  <RelativeLayout
    android:id="@+id/alert_Dialog_button_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_alert_dialog_button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/alert_dialog_message"
    >
    <android.support.constraint.ConstraintLayout
      android:id="@+id/container_two_buttons"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:visibility="invisible"
      >
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <Button
          android:id="@+id/alert_dialog_button_negative"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@color/transparent"
          android:text="@string/popup_btn_text_cancel"
          android:gravity="center"
          android:textSize="16dp"
          android:textColor="@color/white"
          />
        <Button
          android:id="@+id/alert_dialog_button_positive"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@color/transparent"
          android:text="@string/popup_btn_text_ok"
          android:gravity="center"
          android:textSize="16dp"
          android:textColor="@color/white"
          />
      </LinearLayout>
      <View
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    </android.support.constraint.ConstraintLayout>

    <Button
      android:id="@+id/alert_dialog_button_neutral"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/transparent"
      android:text="@string/popup_btn_text_ok"
      android:gravity="center"
      android:textSize="16dp"
      android:textColor="@color/white"
      />
  </RelativeLayout>
</android.support.constraint.ConstraintLayout>